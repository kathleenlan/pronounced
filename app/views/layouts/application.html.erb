<!DOCTYPE html>
<html>
  <head>
    <title>Pronounced</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="ui attached stackable menu navigation-menu">
      <%= link_to "Pronounced", pronounceables_path, class: "item homepage-link" %>
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "item right" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "item right" %>
      <% end %>
    </div>
    <div class="ui container main-container">
      <%= render partial: 'shared/flash_messages' %>
      <%= yield %>
    </div>
  </body>
</html>
