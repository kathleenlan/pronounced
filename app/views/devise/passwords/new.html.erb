<div class="ui segment container devise-container">
  <h2>Reset password</h2>

  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' } do |f| %>
    <%= devise_error_messages! %>

    A password reset link will be emailed to the provided address.
    <br/>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send", class: "ui button" %>
    </div>
  <% end %>
</div>
