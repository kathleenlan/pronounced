<div class="ui segment container devise-container">
  <h2>Send unlock instructions</h2>

  <%= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'ui form' } do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send", class: "ui button" %>
    </div>
  <% end %>
</div>
